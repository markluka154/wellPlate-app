# WellPlate Environment Variables
# Copy this file to .env and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_NAME=WellPlate
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:4321
PORT=4321

# Database (Supabase Postgres)
DATABASE_URL=postgresql://postgres:password@localhost:5432/wellplate
DIRECT_URL=postgresql://postgres:password@localhost:5432/wellplate

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_PRICE_PRO_MONTHLY_EUR=price_your-monthly-price-id
STRIPE_PRICE_PRO_ANNUAL_EUR=price_your-annual-price-id
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Resend (Email)
RESEND_API_KEY=re_your-resend-api-key

# Worker Service
WORKER_URL=http://localhost:8420

# OpenAI (fallback only)
OPENAI_API_KEY=sk-your-openai-api-key

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
